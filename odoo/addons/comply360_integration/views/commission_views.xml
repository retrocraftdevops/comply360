<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Commission List View -->
        <record id="view_commission_tree" model="ir.ui.view">
            <field name="name">x_commission.tree</field>
            <field name="model">x_commission</field>
            <field name="arch" type="xml">
                <list string="Commissions" decoration-info="state=='draft'" decoration-success="state=='paid'" decoration-warning="state=='approved'" decoration-muted="state=='refused'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="registration_reference"/>
                    <field name="registration_type"/>
                    <field name="date"/>
                    <field name="amount" sum="Total"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Commission Form View -->
        <record id="view_commission_form" model="ir.ui.view">
            <field name="name">x_commission.form</field>
            <field name="model">x_commission</field>
            <field name="arch" type="xml">
                <form string="Commission">
                    <header>
                        <button name="action_approve" string="Approve" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                        <button name="action_refuse" string="Refuse" type="object" invisible="state not in ['draft', 'approved']"/>
                        <button name="action_mark_paid" string="Mark as Paid" type="object" invisible="state != 'approved'" class="oe_highlight"/>
                        <button name="action_create_vendor_bill" string="Create Vendor Bill" type="object" invisible="state != 'approved' or invoice_id"/>
                        <button name="action_view_invoice" string="View Vendor Bill" type="object" invisible="not invoice_id"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="amount" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="registration_reference"/>
                                <field name="registration_type"/>
                                <field name="payment_date" readonly="1"/>
                                <field name="invoice_id" readonly="1"/>
                            </group>
                        </group>
                        <group string="Comply360 Integration">
                            <field name="x_comply360_commission_id" readonly="1"/>
                            <field name="x_comply360_registration_id" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Commission Action -->
        <record id="action_commission" model="ir.actions.act_window">
            <field name="name">Commissions</field>
            <field name="res_model">x_commission</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No commissions found
                </p>
                <p>
                    Commissions are automatically created from Comply360 for approved registrations.
                </p>
            </field>
        </record>

    </data>
</odoo>
