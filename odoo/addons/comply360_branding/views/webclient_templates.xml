<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hide Odoo branding using CSS-based approach -->
    <template id="remove_odoo_branding" inherit_id="web.webclient_bootstrap" name="Remove Odoo Branding">
        <xpath expr="//head" position="inside">
            <style type="text/css">
                /* Hide all Odoo branding links */
                a[href*="odoo.com"]:not(.comply360-link) {
                    display: none !important;
                }

                /* Hide Powered by Odoo text */
                .o_footer_copyright a[href*="odoo.com"],
                .o_sub_menu_footer a[href*="odoo.com"] {
                    display: none !important;
                }

                /* Replace footer text */
                .o_sub_menu_footer::after {
                    content: "Â© 2025 Comply360. All rights reserved.";
                    display: block;
                    text-align: center;
                    padding: 10px;
                    color: #6c757d;
                    font-size: 0.875rem;
                }
            </style>
        </xpath>
    </template>

    <!-- Update page title -->
    <template id="webclient_title" inherit_id="web.webclient_bootstrap" name="Comply360 Title">
        <xpath expr="//title" position="replace">
            <title>Comply360</title>
        </xpath>
    </template>
</odoo>
