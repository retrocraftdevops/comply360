# Comply360 Environment Variables
# Copy this file to .env and update with your actual values

# Application
NODE_ENV=development
APP_NAME=Comply360
APP_URL=http://localhost:3000
API_URL=http://localhost:8080

# Database (PostgreSQL)
DATABASE_URL=postgresql://comply360:dev_password@localhost:5432/comply360_dev
POSTGRES_USER=comply360
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=comply360_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# RabbitMQ
RABBITMQ_URL=amqp://comply360:dev_password@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=comply360
RABBITMQ_PASS=dev_password

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=comply360
MINIO_SECRET_KEY=dev_password
MINIO_BUCKET_NAME=comply360-documents

# Odoo ERP Integration
ODOO_URL=http://localhost:6000
ODOO_DATABASE=comply360_dev
ODOO_USERNAME=admin
ODOO_PASSWORD=admin
ODOO_API_KEY=changeme

# Authentication
JWT_SECRET=changeme-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
NEXTAUTH_SECRET=changeme-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# Admin Credentials (Initial Setup)
ADMIN_EMAIL=admin@comply360.com
ADMIN_PASSWORD=admin
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Email (SendGrid)
SENDGRID_API_KEY=changeme
SENDGRID_FROM_EMAIL=noreply@comply360.com
SENDGRID_FROM_NAME=Comply360

# SMS (Twilio)
TWILIO_ACCOUNT_SID=changeme
TWILIO_AUTH_TOKEN=changeme
TWILIO_PHONE_NUMBER=changeme

# Payment Gateways
STRIPE_SECRET_KEY=changeme
STRIPE_PUBLISHABLE_KEY=changeme
STRIPE_WEBHOOK_SECRET=changeme
PAYFAST_MERCHANT_ID=changeme
PAYFAST_MERCHANT_KEY=changeme
PAYFAST_PASSPHRASE=changeme
PAYFAST_SANDBOX=true

# Government API Integrations
CIPC_API_URL=changeme
CIPC_API_KEY=changeme
CIPC_API_SECRET=changeme
DCIP_API_URL=changeme
DCIP_API_KEY=changeme
DCIP_API_SECRET=changeme
SARS_EFILING_URL=changeme
SARS_EFILING_USERNAME=changeme
SARS_EFILING_PASSWORD=changeme

# AI Services
OPENAI_API_KEY=changeme
ANTHROPIC_API_KEY=changeme

# Monitoring & Logging
SENTRY_DSN=changeme
LOG_LEVEL=info

# Security
ENCRYPTION_KEY=changeme-change-this-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:6000

# Feature Flags
ENABLE_AI_VALIDATION=true
ENABLE_ODOO_INTEGRATION=true
ENABLE_CIPC_INTEGRATION=false
ENABLE_DCIP_INTEGRATION=false
