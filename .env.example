# Comply360 Environment Variables
# Copy this file to .env and update with your actual values

# Application
NODE_ENV=development
APP_ENV=development
APP_NAME=Comply360
APP_URL=http://localhost:3000
API_URL=http://localhost:8080

# Backend Services
API_GATEWAY_PORT=8080
AUTH_SERVICE_URL=http://localhost:8081
AUTH_SERVICE_PORT=8081
TENANT_SERVICE_URL=http://localhost:8082
TENANT_SERVICE_PORT=8082
REGISTRATION_SERVICE_URL=http://localhost:8083
REGISTRATION_SERVICE_PORT=8083
DOCUMENT_SERVICE_URL=http://localhost:8084
DOCUMENT_SERVICE_PORT=8084
COMMISSION_SERVICE_URL=http://localhost:8085
COMMISSION_SERVICE_PORT=8085
INTEGRATION_SERVICE_URL=http://localhost:8086
INTEGRATION_SERVICE_PORT=8086

# Database (PostgreSQL) - Dual Database Architecture
# Application Database (for Comply360 services)
DATABASE_URL=postgresql://comply360_app_user:comply360_app_secure_pass@localhost:5432/comply360_app
APP_DB_HOST=localhost
APP_DB_PORT=5432
APP_DB_NAME=comply360_app
APP_DB_USER=comply360_app_user
APP_DB_PASSWORD=comply360_app_secure_pass

# Odoo Database (accessed via Integration Service only)
ODOO_DB_HOST=localhost
ODOO_DB_PORT=5432
ODOO_DB_NAME=comply360_odoo
ODOO_DB_USER=odoo_user
ODOO_DB_PASSWORD=odoo_secure_pass

# Legacy variables (for backward compatibility)
POSTGRES_USER=comply360
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=comply360_app
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# RabbitMQ
RABBITMQ_URL=amqp://comply360:dev_password@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=comply360
RABBITMQ_PASS=dev_password

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=comply360
MINIO_SECRET_KEY=dev_password
MINIO_BUCKET_NAME=comply360-documents

# Odoo ERP Integration
ODOO_URL=http://localhost:8069
ODOO_DATABASE=comply360_odoo
ODOO_USERNAME=admin
ODOO_PASSWORD=admin
ODOO_API_KEY=changeme

# Authentication
JWT_SECRET=changeme-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
NEXTAUTH_SECRET=changeme-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# Admin Credentials (Initial Setup)
ADMIN_EMAIL=admin@comply360.com
ADMIN_PASSWORD=admin
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Email (SendGrid)
SENDGRID_API_KEY=changeme
SENDGRID_FROM_EMAIL=noreply@comply360.com
SENDGRID_FROM_NAME=Comply360

# SMS (Twilio)
TWILIO_ACCOUNT_SID=changeme
TWILIO_AUTH_TOKEN=changeme
TWILIO_PHONE_NUMBER=changeme

# Payment Gateways
STRIPE_SECRET_KEY=changeme
STRIPE_PUBLISHABLE_KEY=changeme
STRIPE_WEBHOOK_SECRET=changeme
PAYFAST_MERCHANT_ID=changeme
PAYFAST_MERCHANT_KEY=changeme
PAYFAST_PASSPHRASE=changeme
